<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/frame_start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="wrap_content"
            android:text="开始"/>

        <Button
            android:id="@+id/frame_end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="wrap_content"
            android:text="结束"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/frame_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/frame_radio_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单次"
            android:layout_marginRight="50dp"/>

        <RadioButton
            android:id="@+id/frame_radio_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="循环"/>
    </RadioGroup>

    <SeekBar
        android:id="@+id/frame_seek_bar"
        android:layout_marginTop="30dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/frame_image"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/frame_anim"/>
</LinearLayout>
