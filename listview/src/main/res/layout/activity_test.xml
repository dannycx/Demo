<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/listview_multiplex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="listview复用demo"/>

    <Button
        android:id="@+id/listview_more_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="listview多类型数据demo"/>

    <Button
        android:id="@+id/listview_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可扩展的listview"/>

    <Button
        android:id="@+id/listview_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="带刷新的listview"/>

    <Button
        android:id="@+id/listview_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="带复选框的listview"/>

    <Button
        android:id="@+id/listview_common_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通用的listView适配器封装"/>

    <Button
        android:id="@+id/listview_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="listView数据数量为0测试"/>
</LinearLayout>