<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/file_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建文件"/>

        <Button
            android:id="@+id/file_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除文件"/>

        <Button
            android:id="@+id/file_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写入文件"/>

        <Button
            android:id="@+id/file_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读取文件"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e6b909"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/file_write_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="写"/>

            <EditText
                android:id="@+id/file_write_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入存储数据:"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/file_read_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="读"/>

            <TextView
                android:id="@+id/file_read_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e6b909"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/file_delete_directory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/file_delete_directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除文件夹"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e6b909"/>

    <Button
        android:id="@+id/file_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看设备中的文件"/>
</LinearLayout>
